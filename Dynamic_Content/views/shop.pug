extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://i.pinimg.com/736x/41/28/f5/4128f527823d4e275f9ef7b1da814f53.jpg", alt="")
                        div.card__content
                            h2.product__price RM20.10 
                            p.product__description A very interesting item 
                        .card__actions 
                            button.btn Add to Cart
        else
            h1.product__price NO PRODUCT           