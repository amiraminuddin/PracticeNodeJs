<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/user.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <% if (users.length > 0) { %>
            <div class="grid">
                <% for (let user of users) { %>
                    <article class="card user-item"> 
                        <header class="card__header">
                            <h1 class="user__title"><%= user.name %></h1>
                        </header>
                        <div class="card__image">
                            <img src="https://www.seekpng.com/png/full/297-2978586_rono-daniel-empty-profile-picture-icon.png" alt="">
                        </div>
                        <div class="card__content">
                            <h1 class="user__price">AGE</h1>
                            <p class="user__description">DESCRIPTION</p>
                        </div>
                        <div class="card__actions ">
                            <button class="btn">VIEW</button>
                        </div>
                    </article>
                    <% } %>
            </div>
        <% } else { %>
            <h1 class="user__price">NO USER</h1>
        <% } %>
    </main>

<%- include('includes/end.ejs') %>
